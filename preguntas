class Preguntas:

    def Preguntas_nivel(self,preguntas):
        count_correctas = 0 #contador de las correctas
        for key,value in preguntas.items():
            print(key,' ')
            x = 0
            for res,index in value.items():
                print (res)
                if index == 1:
                    x = res.split('.')[0]
            a = input("Ingrese la opcion: ")
            if a == x:
                count_correctas += 1
        pasar = (len(preguntas)//2) + 1 #definicion de si pasa
        if count_correctas >= pasar: #si el numero de correctas es mayor pasara al siguiente nivel
            return True
        else:
            return False
